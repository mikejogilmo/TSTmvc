@model IEnumerable<TSTmvc.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<p>
    <button type="button" class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
          
        </th>
    </tr>

    @foreach (var item in Model.ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               
                @if (item.Users.Count() == 0)
                {
                    <button type="button" class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                }
                else
                {
                    @item.Users.Count()<span> Employees</span>
                }
            </td>
        </tr>
    }

</table>
