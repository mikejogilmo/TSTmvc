@model IEnumerable<TST.Data.EF.TST_EmployeeStatuses>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee Statuses</h2>

<p>
    <button type="button" class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (item.TST_Employees.Count() == 0)
            {
                <button type="button" class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.EmployeeStatusId })</button>
            }
            else
            {
                @item.TST_Employees.Count()<span> Employees</span>
            }
        </td>
    </tr>
}

</table>
